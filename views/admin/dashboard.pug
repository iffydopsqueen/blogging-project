extends layout

block content

    script.
        isSignInPage = false
        signIn(isSignInPage)

    body
        .admin__title
            h2 Posts
            a.button(href="/add-post") + Add New

        ul.admin__posts
            if data && data.length > 0
                each post in data
                    li
                        //-a(href=`/post/${post._id}`) post.title + &nearr;
                        a(href=`/post/${post._id}`)= post.title + ' â†—'
                        .admin__post__controls
                            a.btn(href=`/edit-post/${post._id}`) Edit
                            form(action=`/delete-post/${post._id}?_method=DELETE`, method="POST")
                                input(type="submit", value="Delete", class="btn-delete btn")
            else
                li No posts found
